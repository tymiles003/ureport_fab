# the upstream component nginx needs to connect to
upstream ureport_test {
    server unix:///var/www/ureport_test/ureport.sock; # for a file socket
    # server 127.0.0.1:8001; # for a web port socket (we'll use this first)
}

# configuration of the server
server {
    # the port your site will be served on
    listen      80;

    # the domain name it will serve for
    server_name test.ureport.in # substitute your machine's IP address or FQDN
    charset     utf-8;

    # max upload size
    client_max_body_size 75M;   # adjust to taste


    # Finally, send all non-media requests to the Django server.
    location / {
        uwsgi_pass  ureport_test;
        include uwsgi_params;
        uwsgi_connect_timeout 15;
        uwsgi_read_timeout 720;
        proxy_read_timeout 720;
        add_header Access-Control-Allow-Origin *;
    }

   location /sitestatic {
        autoindex on;
        alias /var/www/ureport_test/sitestatic/;
    }

   location /sitemedia {
        autoindex on;
        alias /var/www/ureport_test/media/;
    }



}

